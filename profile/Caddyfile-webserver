cs260.click {
  root * /usr/share/caddy
  file_server
  header Access-Control-Allow-Origin *
  header -etag
  header -server
}

learn.cs260.click {
  redir https://github.com/webprogramming260
}


class.cs260.click {
  root * /usr/share/caddy/utilities
  file_server
  header Access-Control-Allow-Origin *
  header -etag
  header -server
  try_files {path} /
}

